extends layout

block menu
    include menu.pug

block content
    div.sky.container-fluid
        nav.navbar.navbar-light.bg-transparent
            div
                ul.nav
                    li.nav-item
                        a.nav-link.city-icon(href="#")
                            span GAMeD City
                    li.nav-item
                        a.nav-link.city-icon(href="#", alt="Energy")
                                i.fa.fa-bolt
                                span  150
                    li.nav-item
                        a.nav-link.city-icon(href="#", alt="Ropes")
                                i.fa.fa-retweet
                                span 10
        canvas(width=900, height=400, id="cityCanvas")
        input(type="hidden", value=createNewHouse, id="createNewHouse")
    script.
        $(document).ready(function () {
            init(4, true, 1); // school
            init(2, false, 3); // house
            init(2, false, 3); // house
            init(2, false, 2); // library
            init(4, false, 1); // school
            init(4, false, 2); // university
            init(2, false, 3); // house

            init(4, false, 1); // school
            init(2, false, 3); // house
            init(2, false, 0); // library
            init(2, false, 3); // house
            init(4, false, 2); // university
            init(4, false, 1); // school
            init(2, false, 3); // house
            init(1, false, 3, $('#createNewHouse').val());
        });