extends layout

block menu
    include menu.pug

block content
    div.card
        div.card-body
            h3 Request Electricity

            p Power your city by asking questions to players, so they can prove they have the power to answer!

            div.input-group.mb-3
                input.form-control(type="text", placeholder="Search players")
                div.input-group-append
                    button.btn.btn-primary(type="button")
                        span Search players &nbsp;
                        i.fa.fa-search
            table.table
                each user in users
                    tr(id="user_" + user.id)
                        td
                            img.avatar(src=user.avatar)
                        td=user.name
                        td
                            i.fa.fa-globe.text-success &nbsp
                            span=user.ropes
                            span &nbsp;&nbsp;
                            i.fa.fa-bolt.text-warning &nbsp
                            span=user.energy
                        td
                            button(type=button class='btn btn-success', onclick="$('#user_" + user.id + "').toggle('slow', function(){});")
                                i.fa.fa-bolt &nbsp;Request Electricity